<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.OptionActivity"
    android:orientation="vertical"
    android:background="@color/colorPrimary">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >

    <TextView
        android:layout_marginTop="10dp"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose Your Category"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:padding="10dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/carLayout"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1">

        <com.joooonho.SelectableRoundedImageView
            app:sriv_left_top_corner_radius="30dp"
            app:sriv_right_top_corner_radius="30dp"
            android:id="@+id/img_1"
            android:layout_centerInParent="true"
            android:layout_width="220dp"
            android:layout_height="160dp"
            android:background="@drawable/car"/>

        <TextView
            android:layout_margin="15dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/monsterrat_regular"
            android:layout_below="@id/img_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Four Wheeler"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/bikeLayout"
        android:layout_gravity="center_horizontal"
        android:layout_width="300dp"
        android:layout_height="0dp"
        android:layout_weight="1">

        <ImageView
            android:id="@+id/img_2"
            android:layout_centerInParent="true"
            android:layout_width="200dp"
            android:layout_height="140dp"
            android:background="@drawable/rsz_bike"/>

        <TextView
            android:layout_margin="15dp"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:fontFamily="@font/monsterrat_regular"
            android:layout_below="@id/img_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Two Wheeler"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

</LinearLayout>